@model CSMS.Models.ApplicationUser
@{
    ViewBag.Title = "Customer Panel";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="container">
    <div class="row ">
        <div class="col-sm col-6">
            <div class="card text-white text-center bg-dark pb-2">
                <div class="card-body">
                    <h4>
                        <b><u>Customer Information</u></b>
                        <br />
                        <br />
                        <b>Name:</b> @Model.Name
                        <br />
                        <b>Surname:</b> @Model.Surname
                        <br />
                        <b>Email:</b> @Model.Email
                        <br />
                        <b>Adress:</b> @Model.Address
                        <br />
                        <b>Phone Number:</b> @Model.PhoneNumber
                        <br />
                    </h4>
                </div>

            </div>

        </div>

        <div class="col-sm col-6">
            <div class="card text-white text-center bg-dark mb-3" style="max-height: 50rem;">
                <div class="card-body">
                    <h4>
                        <b><u>Car Information</u></b>
                        <br />
                        <br />
                        Customer has <b> @Model.Cars.Count Car(s) </b>
                        <br />
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>