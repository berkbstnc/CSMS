@model IEnumerable<CSMS.Models.ApplicationUser>

@{
    ViewBag.Title = "Create Appointment";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

@if (0 < ViewBag.MechanicUsers.Length)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Mechanic Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.MechanicUsers)
            {
                <tr>
                    <td class="h4"> @user.Name @user.Surname</td>
                    <td>
                        @Html.ActionLink(
                            "Create an Appointment",
                            "Create",
                            "Appointment",
                            new { id = user.Id, date = DateTime.Now.ToString("yyyy-MM-dd") },
                            new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">There is no mechanic.</div>
}


