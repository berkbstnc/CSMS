@model IEnumerable<CSMS.Web.Models.Service.FaultRecord>
@{
    ViewBag.Title = "Opened Fault Records";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<table class="table table-sm table-responsive">
    <thead>
        
        <tr>

            <td><b>Record ID</b></td>
            <td><b>Plate Number</b></td>
            <td><b>Car Km</b></td>
            <td><b>Arrival Date</b></td>
            <td><b>Description</b></td>
            <td></td>
        </tr>
        
    </thead>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.RecordId</td>
                    <td>@item.CustomerCar.Plate</td>
                    <td>@item.CarKm</td>
                    <td>@item.ArrivalDate.ToShortDateString()</td>
                    <td>@item.Record</td>
                    <td>@Html.ActionLink("Make an Operation","MakeOperation","Order",new {orderid=item.RecordId}, new {@class="btn btn-sm btn-secondary"})</td>
                </tr>
            }
</table>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-dark" })
    </div>
</div>


